{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1>Creation d'un article </h1>
    {{form_start(formArticle)}}

    {{form_row(formArticle.title, {'attr': {'placeholder' : "Titre de l'article"}})}}
    {{form_row(formArticle.categories, {'attr': {'placeholder' : "Quelles catégorie de reférencement"}})}}
    {{form_row(formArticle.content, {'attr': {'placeholder' : "Titre de l'article"}})}}
    
    <button type="submit" class="btn btn-success">
    {% if editMode %}
        Modifier
    {% else %}
        Valider
    {% endif %}    
    </button>

    {# {{form_widget(formArticle)}} #}
    
    
    
    {{form_end(formArticle)}}
{% endblock %}